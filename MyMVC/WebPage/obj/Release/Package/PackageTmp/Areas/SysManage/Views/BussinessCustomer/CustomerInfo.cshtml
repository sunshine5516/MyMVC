
@{
    ViewBag.Title = "CustomerInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    small {
        font-size: 120%;
    }
</style>
@model Domain.SYS_BUSSINESSCUSTOMER
@{
    if (Model != null && Model.ID > 0)
    {
        <div class="ibox animated fadeInRight">
            <div class="ibox-content">
                <div class="tab-content">
                    <div class="tab-pane active">
                        <div class="row">
                            <div class="col-lg-12">
                                <h3>@Model.CompanyName</h3>
                                <p>
                                    @*@Html.Raw(ViewData["CompanyInstroduce"])*@
                                </p>
                            </div>
                        </div>
                        <div class="client-detail">
                            <div class="slimScrollDiv" style="position: relative; width: auto; height: 100%;">
                                <div class="full-height-scroll" style="width: auto; height: 100%;">
                                    <hr>
                                    <p><i class="fa fa-location-arrow" style="color:#ED5565;font-size: 18px;margin-right: 15px;"></i>@Model.CompanyAddress</p>
                                    <hr>
                                    <p><i class="fa fa-globe" style="color:#ED5565;font-size: 18px;margin-right: 15px;"></i><a href="@Model.CompanyWebSite" target="_blank">@Model.CompanyWebSite</a></p>
                                    <hr>
                                    <span class="label label-danger">合作动态</span>
                                    <ul class="list-group clear-list">
                                        <li class="list-group-item fist-item">
                                            <span class="pull-right">0</span> 合作项目
                                        </li>
                                        <li class="list-group-item">
                                            <span class="pull-right" style="background:#1ab394">0</span> 已完成
                                        </li>
                                        <li class="list-group-item">
                                            <span class="pull-right" style="background:#f8ac59">0</span> 进行中
                                        </li>
                                        <li class="list-group-item">
                                            <span class="pull-right" style="background:#c2c2c2">0</span> 失败
                                        </li>
                                    </ul>
                                    <hr>
                                    <span class="label label-danger">负责人</span>
                                    <div id="vertical-timeline" class="vertical-container light-timeline">
                                        <div class="vertical-timeline-block">
                                            <div class="vertical-timeline-icon navy-bg">
                                                <i class="fa fa-user"></i>
                                            </div>
                                            <div class="vertical-timeline-content" style=" padding-top: 7px;">
                                                <span class="vertical-date"><small style="color: #ED5565;">@Model.ChargePersionName</small><small>&nbsp; @(Model.ChargePersionSex == 1 ? "男" : "女")</small></span>
                                            </div>
                                        </div>
                                        <div class="vertical-timeline-block">
                                            <div class="vertical-timeline-icon blue-bg">
                                                <i class="fa fa-phone"></i>
                                            </div>
                                            <div class="vertical-timeline-content" style=" padding-top: 7px;">
                                                <span class="vertical-date"><small>@Model.ChargePersionPhone</small></span>
                                            </div>
                                        </div>

                                        <div class="vertical-timeline-block">
                                            <div class="vertical-timeline-icon lazur-bg">
                                                <i class="fa fa-qq"></i>
                                            </div>

                                            <div class="vertical-timeline-content" style=" padding-top: 7px;">
                                                <span class="vertical-date"><small>@Model.ChargePersionQQ</small></span>
                                            </div>
                                        </div>

                                        <div class="vertical-timeline-block">
                                            <div class="vertical-timeline-icon yellow-bg">
                                                <i class="fa fa-envelope"></i>
                                            </div>

                                            <div class="vertical-timeline-content" style=" padding-top: 7px;">
                                                <span class="vertical-date"><small>@Model.ChargePersionEmail</small></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="ibox animated fadeInRight">
            <div class="ibox-content">
                <div class="text-center">
                    <i class="fa fa-briefcase" style="color:#c1c3c4;font-size: 184px;"></i>
                </div>
            </div>
        </div>
    }
}


